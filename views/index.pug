extends _layout

block scripts
    script(src="/node_modules/angular/angular.js")
    script(src="/node_modules/angular-resource/angular-resource.js")
    script(src="/public/sr-assessments/app.js")
    script(src="/public/sr-assessments/assessments/list/list.module.js")
    script(src="/public/sr-assessments/assessments/list/list.controller.js")
    script(src="/public/sr-assessments/assessments/list/list.component.js")
    script(src="/public/sr-assessments/assessments/list-item/list-item.component.js")
    script(src="/public/sr-assessments/offers/list/list.module.js")
    script(src="/public/sr-assessments/offers/list/list.controller.js")
    script(src="/public/sr-assessments/offers/list/list.component.js")
    script(src="/public/sr-assessments/offers/list-item/list-item.component.js")
    script(src="/public/sr-assessments/configs/list/list.module.js")
    script(src="/public/sr-assessments/configs/list/list.controller.js")
    script(src="/public/sr-assessments/configs/list/list.component.js")
    script(src="/public/sr-assessments/configs/list-item/list-item.component.js")

block content
    main(ng-app="srAssessments")
        h1 SmartRecruiters Assessments App
        a(href='https://github.com/wojtek-zajac/express-api-fetch', target='_blank') Git repository
        div
            button(ng-click="showAssessmentsList = !showAssessmentsList") Assessments
            assessments-list(ng-show="showAssessmentsList")
                list-assessment-item
        div
            button(ng-click="showOffersList = !showOffersList") Offers
            offers-list(ng-show="showOffersList")
                list-offer-item
        div
            button(ng-click="showConfigsList = !showConfigsList") Configs
            configs-list(ng-show="showConfigsList")
                list-config-item
